<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/word_panel"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_toStartOf="@id/button_panel">

            <TextView
                android:id="@+id/text_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/spacing_middle"
                android:text="абрикос"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/text_definition_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_word"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle"
                android:paddingBottom="@dimen/spacing_middle"
                android:text="1. зардолу; 2. дарахти зардолу. 1. зардолу; 2. дарахти зардолу. 1. зардолу;"
                android:textColor="@color/secondaryText" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/button_panel"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_copy"
                style="@style/Widget.App.Button.IconOnly"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/spacing_middle"
                android:background="@drawable/ic_copy"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center" />

            <Button
                android:id="@+id/btn_favorite"
                style="@style/Widget.App.Button.IconOnly"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/spacing_middle"
                android:background="@drawable/ic_favorite"
                android:gravity="center"
                app:backgroundTint="@color/colorFavorite" />

            <Button
                android:id="@+id/btn_share"
                style="@style/Widget.App.Button.IconOnly"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/spacing_middle"
                android:background="@drawable/ic_share"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/word_panel"
            android:background="@color/lightGrey"
            android:padding="@dimen/spacing_middle" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>